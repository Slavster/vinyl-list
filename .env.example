# Google Cloud credentials
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Discogs API credentials
DISCOGS_USER=your_discogs_username
DISCOGS_TOKEN=your_discogs_token

# Optional: Discogs User-Agent (polite)
DISCOGS_APP_NAME=vinyl-bulk
DISCOGS_APP_VERSION=1.1
# DISCOGS_CONTACT=Your Name <you@example.com>
# DISCOGS_APP_URL=https://github.com/yourrepo

# Storage & runtime settings
VINYL_GCS_BUCKET=your-bucket
VINYL_INPUT_PREFIX=covers/
DISCOGS_FOLDER_ID=1
VISION_SYNC_CHUNK=8

# Collection condition defaults
DISCOGS_MEDIA_CONDITION=Very Good (VG)
DISCOGS_SLEEVE_CONDITION=Good Plus (G+)

# Matching preferences (vinyl + US bias)
FORMAT_FILTER=Vinyl
COUNTRY_PREF=US
SEARCH_PAGE_SIZE=10

# Spotify playlist builder (optional)
SPOTIPY_CLIENT_ID=your_spotify_client_id
SPOTIPY_CLIENT_SECRET=your_spotify_client_secret
SPOTIPY_REDIRECT_URI=http://127.0.0.1:8888/callback
DISCOGS_PLAYLIST_SOURCE_FOLDER=
